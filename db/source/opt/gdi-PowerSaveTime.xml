<option type="int" id="opt/gdi-PowerSaveTime">
  <!-- A multilingual <comments> block can appear here, too;
       it should be treated as documentation for the user. -->
  <arg_longname>
   <en>Idle time to start power save mode (min)</en>
  </arg_longname>
  <arg_shortname>
   <en>PowerSaveTime</en><!-- backends only know <en> shortnames! -->
  </arg_shortname>
  <arg_execution>
   <arg_group>Miscellaneous</arg_group>
   <arg_order>660</arg_order>
   <arg_spot>E</arg_spot>
   <arg_substitution />
   <arg_proto>s/(\@PJL ENTER LANGUAGE)/\@PJL DEFAULT POWERSAVETIME = %s\r\n$1/; </arg_proto>
  </arg_execution>
  <constraints>
     <constraint sense="true">
      <driver>gdi</driver>
      <arg_defval>5</arg_defval>
     </constraint>
  </constraints>
  <arg_max>60</arg_max>
  <arg_min>1</arg_min>
</option>
